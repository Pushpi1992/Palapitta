<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d5"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/shape_for_edittext">
        <!-- <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_above="@+id/llLogin"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/d20"
             android:gravity="center"
             android:src="@drawable/pala_pitta_icon_final_transparent"
             android:text="Palapitta cycling park"
             android:textColor="@color/white"
             android:textSize="@dimen/s25" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:src="@drawable/icon_login"
                android:text="Palapitta cycling park"
                android:textColor="@color/white"
                android:textSize="@dimen/s25" />

            <LinearLayout
                android:id="@+id/llLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/d10"
                android:background="@drawable/shape_for_edittext"
                android:gravity="center"
                android:orientation="vertical">

                <com.cykul04.palapitta.views.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/s18" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:hint="Email"
                    app:errorTextAppearance="@color/colorBtn">

                    <com.cykul04.palapitta.views.CustomEditText
                        android:id="@+id/contact_email_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:longClickable="false"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/colorBtn" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:hint="Password"
                    app:errorTextAppearance="@color/colorBtn"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorBtn">

                    <com.cykul04.palapitta.views.CustomEditText
                        android:id="@+id/contact_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/colorBtn" />
                </android.support.design.widget.TextInputLayout>

                <com.cykul04.palapitta.views.CustomButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="login"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <com.cykul04.palapitta.views.CustomFontTextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="or"
                    android:textSize="@dimen/s18" />

                <com.cykul04.palapitta.views.CustomButton
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/d15"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>