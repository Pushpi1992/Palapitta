<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.cykul04.palapitta.views.CustomFontTextView
        android:id="@+id/greetingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/d10"
        android:gravity="center"
        android:text="PPCP Registration"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/s22" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d5"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Sharath"
                    android:textSize="@dimen/_16sdp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Varma"
                    android:textSize="@dimen/_16sdp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/mobile_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/mobileNo_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="9502324196"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="kantem.sharath@gmail.com"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/birth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/date_of_birth_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Date Of Birth"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="18/03/1994"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/event_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/eventcode_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="Organisation"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Thrymr Software"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/pass_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/darkGrey"
                    android:layout_gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/darkGrey"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <!-- <android.support.design.widget.TextInputLayout
                 android:id="@+id/password_layout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/_15sdp"
                 android:layout_marginRight="@dimen/_15sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 app:errorTextAppearance="@color/colorBtn">

                 <com.cykul04.palapitta.views.CustomEditText
                     android:id="@+id/password_edt"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_38sdp"
                     android:hint="Password"
                     android:inputType="textPassword"
                     android:maxLength="10"
                     android:maxLines="1"
                     android:text="123456"
                     android:paddingLeft="@dimen/_8sdp"
                     android:singleLine="true"
                     android:textSize="@dimen/_16sdp" />
             </android.support.design.widget.TextInputLayout>-->

            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/confirm_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:errorTextAppearance="@color/colorBtn"
                >

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/confirm_password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/d8"
                    android:singleLine="true"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>-->

            <com.cykul04.palapitta.views.CustomButton
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:layout_marginTop="@dimen/d15"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/s16" />

            <com.cykul04.palapitta.views.CustomFontTextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="or"
                android:textSize="@dimen/s18"
                android:visibility="gone" />

            <com.cykul04.palapitta.views.CustomButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>