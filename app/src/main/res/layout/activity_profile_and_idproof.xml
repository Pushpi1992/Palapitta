            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_organisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Organisation"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_pin_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#404041" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Age"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#404041" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_state_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Gender"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_state_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#404041" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Address"
                app:errorTextAppearance="@color/colorBtn"
                >
                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_country_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#404041"/>
            </android.support.design.widget.TextInputLayout>
        <com.cykul04.palapitta.views.CustomButton
            android:id="@+id/id_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            android:text="ID Proof"
            android:textAllCaps="true"
            android:textSize="18sp" />
        <com.cykul04.palapitta.views.CustomButton
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:padding="@dimen/d5"
            android:layout_weight="1"
            android:text="submit"
            android:layout_margin="@dimen/_10sdp"            android:textAllCaps="true"
            android:textSize="18sp" />
