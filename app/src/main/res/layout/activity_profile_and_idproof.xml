            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Name"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/darkGrey" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Email"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/darkGrey" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:hint="Mobile"
                app:errorTextAppearance="@color/colorBtn">

                <com.cykul04.palapitta.views.CustomEditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#404041"
                    />
            </android.support.design.widget.TextInputLayout>
       <!-- <com.cykul04.palapitta.views.CustomFontTextView
            android:id="@+id/tv_verifiy_otp"
            android:layout_width="wrap_content"
